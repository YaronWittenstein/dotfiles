[user]
	name = Yaron Wittenstein
	email = yaron.wittenstein@gmail.com
[core]
	editor = nvim
  excludesfile = ~/yaronwittenstein/.gitignore
[github]
  user = YaronWittenstein
[color]
  ui = auto
[diff]
  tool = vimdiff
[diftool]
  prompt = false
[push]
  default = current
[credential]
	helper = osxkeychain
[filter "media"]
	required = true
	clean = git media clean %f
	smudge = git media smudge %f
[filter "hawser"]
	clean = git hawser clean %f
	smudge = git hawser smudge %f
	required = true
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[pager]
	diff = diff-so-fancy | less --tabs=4 -RFX
	show = diff-so-fancy | less --tabs=4 -RFX
[mergetool]
	keepBackup = false
[init]
	defaultBranch = main
